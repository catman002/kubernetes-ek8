[Unit]
Documentation=https://github.com/haproxy
Description=HAProxy Load Balancer
After=syslog.target network.target

[Service]
ExecStartPre={{haproxy_exec_start}} -f /etc/haproxy/haproxy.conf -c -q
ExecStart={{haproxy_exec_start}} -Ws -f /etc/haproxy/haproxy.conf -p /usr/local/haproxy/socket/haproxy.pid
ExecReload=/bin/kill -USR2 $MAINPID
Restart=on-failure
RestartSec=5


[Install]
WantedBy=multi-user.target
